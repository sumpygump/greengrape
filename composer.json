{
    "name": "sumpygump/greengrape",
    "description": "A static website builder. Create markdown files and a theme and then serve up as HTML.",
    "type": "project",
    "license": "MIT",
    "require": {
        "twig/twig": "3.*",
        "michelf/php-markdown": "*",
        "dxw/phar-install": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpmetrics/phpmetrics": "^2.3"
    },
    "autoload": {
        "psr-4": { "Greengrape\\": "src/Greengrape/" }
    },
    "bin": [ "bin/greengrape-install", "bin/check-theme" ],
    "scripts": {
        "post-update-cmd": "vendor/bin/phar-install"
    }
}
